@model WebApp.Areas.Admin.Models.SubscriptionPlan.CreateViewModel

<link rel="stylesheet" href="~/css/admin-subscription-create.css" />

<form asp-action="Create" method="post" class="subscription-form-full">

    <div class="header-supscription-plans-admin" style="margin-bottom: 30px;">
        <div class="page-name">Create subscription plan</div>
        <div class="header-buttons-container">
            <a asp-action="Index" class="header-action-button btn-cancel">Cancel</a>
            <button asp-area="Admin" asp-controller="SubscriptionPlan" asp-action="Create" type="submit" class="header-action-button btn-save">Save</button>
        </div>
    </div>

    <div class="attribute-container">
        <label asp-for="Name" class="attribute-label">Name</label>
        <div class="item-divider-line"></div>
        <input asp-for="Name" class="attribute-input" />
        <span asp-validation-for="Name" class="validation-error"></span>
    </div>

    <div class="attribute-container">
        <label asp-for="DurationDays" class="attribute-label">Duration (days)</label>
        <div class="item-divider-line"></div>
        <input asp-for="DurationDays" type="number" class="attribute-input" />
        <span asp-validation-for="DurationDays" class="validation-error"></span>
    </div>

    <div class="attribute-container">
        <label asp-for="Description" class="attribute-label">Description</label>
        <div class="item-divider-line"></div>
        <textarea asp-for="Description" class="attribute-input" rows="3"></textarea>
        <span asp-validation-for="Description" class="validation-error"></span>
    </div>

    <div class="attribute-container">
        <label asp-for="StorageLimitGb" class="attribute-label">Storage limit (GB)</label>
        <div class="item-divider-line"></div>
        <input asp-for="StorageLimitGb" type="number" class="attribute-input" />
        <span asp-validation-for="StorageLimitGb" class="validation-error"></span>
    </div>

    <div class="attribute-container">
        <label asp-for="DailyRequestsLimit" class="attribute-label">Querries per day</label>
        <div class="item-divider-line"></div>
        <input asp-for="DailyRequestsLimit" type="number" class="attribute-input" />
        <span asp-validation-for="DailyRequestsLimit" class="validation-error"></span>
    </div>

    <div class="attribute-container">
        <label asp-for="Price" class="attribute-label">Price</label>
        <div class="item-divider-line"></div>
        <input asp-for="Price" type="number" step="0.01" class="attribute-input" />
        <span asp-validation-for="Price" class="validation-error"></span>
    </div>

</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}